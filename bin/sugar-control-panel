import sys
import getopt

sys.path.insert(0, env.get_shell_path())
 
import control 
        
def cmd_help():
    print 'Usage: sugar-control [ option ] key [ args ... ] \n\
    Control for the sugar environment. \n\
    Options: \n\
    -h, --help   show this help message and exit \n\
    -h key       show information about this key \n\
    -g key       get the current value of the key \n\
    -s key       set the current value for the key \n\
    '

def main():
    try:
        opts, args = getopt.getopt(sys.argv[1:], "h:s:g:", ["help"])
    except getopt.GetoptError:
        cmd_help()
        sys.exit(2)

    output = None
    verbose = False

    for opt, key in opts:
        if opt in ("-h"):            
            method = getattr(control, 'set_' + key, None)
            if method is None:
                cmd_help()
                sys.exit()
            else:    
                print method.__doc__                
        if opt in ("-g"):
            method = getattr(control, 'print_' + key, None)
            if method is None:
                cmd_help()
                sys.exit()
            else:    
                method()
        if opt in ("-s"):
            method = getattr(control, 'set_' + key, None)
            if method is None:
                cmd_help()
                sys.exit()
            else:
                try:
                    method(*args)
                except Exception, e:
                    print "sugar-control: %s"% e

if __name__ == '__main__':
    main()
