#!/usr/bin/python
import sys

from sugar import setup

if len(sys.argv) > 2:
	prefix = sys.argv[2]
else:
	prefix = '@prefix@'

if len(sys.argv) > 3:
	root = sys.argv[3]
else:
	root = ''

setup.setup_activity(sys.argv[1],
		     '%s%s/share/sugar/activities' % (root, prefix),
		     '%s/bin/sugar-activity-factory' % prefix)

print '%s installed.' % sys.argv[1]
